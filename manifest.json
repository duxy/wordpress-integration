{
  "name": "wordpress-integration",
  "vendor": "vtex",
  "version": "2.0.2",
  "title": "Wordpress Integration",
  "description": "Connect a Wordpress blog to a VTEX store",
  "categories": [],
  "registries": [],
  "builders": {
    "node": "4.x",
    "graphql": "1.x",
    "react": "3.x",
    "messages": "1.x",
    "store": "0.x",
    "docs": "0.x"
  },
  "mustUpdateAt": "2018-09-05",
  "scripts": {
    "postreleasy": "vtex publish --verbose"
  },
  "dependencies": {
    "vtex.blog-interfaces": "0.x",
    "vtex.store": "2.x",
    "vtex.styleguide": "9.x",
    "vtex.store-components": "3.x",
    "vtex.shelf": "1.x",
    "vtex.product-summary": "2.x",
    "vtex.product-context": "0.x",
    "vtex.search-graphql": "0.x",
    "vtex.search-page-context": "0.x",
    "vtex.css-handles": "0.x"
  },
  "billingOptions": {
    "termsURL": "https://compliance.vtex.com/gdpr/policies/vtex-privacy-policy",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "free": true
  },
  "settingsSchema": {
    "title": "Wordpress Integration",
    "type": "object",
    "properties": {
      "endpoint": {
        "title": "Wordpress URL",
        "description": "Enter the URL of your Wordpress installation in the form http://www.example.com/",
        "type": "string"
      },
      "titleTag": {
        "title": "Title tag for blog homepage",
        "description": "Will also be appended to inner blog pages",
        "type": "string"
      }
    }
  },
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "graphql-query"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "*",
        "path": "/wp-json/wp/v2/*"
      }
    }
  ],
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}